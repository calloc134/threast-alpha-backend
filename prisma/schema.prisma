// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  SUBADMIN
  MANAGER
  USER
}

model User {
  cuid           String        @id @default(cuid())
  created_at     DateTime      @default(now())
  updated_at     DateTime      @updatedAt
  handle         String        @unique
  screenName     String
  bio            String        @default("")
  hidden_commnet String        @default("")
  profile_image  String
  password       String
  role           Role          @default(USER)
  posts          Post[]
  post_likes     PostLike[]
  post_comments  PostComment[]
}

model Follow {
  cuid          String   @id @default(cuid())
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt
  src_user_cuid String
  dst_user_cuid String

  @@unique([src_user_cuid, dst_user_cuid])
}

model Post {
  cuid       String   @id @default(cuid())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  title      String
  body       String
  private    Boolean  @default(false)

  src_user      User   @relation(fields: [src_user_cuid], references: [cuid])
  src_user_cuid String

  likes    PostLike[]
  comments PostComment[]

  hashtags HashTag[]
}

model HashTag {
  cuid        String   @id @default(cuid())
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
  name        String   @unique
  description String   @default("")
  posts       Post[]
  // ハッシュタグと投稿はN:Nの関係
}

model PostLike {
  cuid       String   @id @default(cuid())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  src_user_cuid String
  src_user      User   @relation(fields: [src_user_cuid], references: [cuid])

  dst_post      Post   @relation(fields: [dst_post_cuid], references: [cuid])
  dst_post_cuid String

  @@unique([src_user_cuid, dst_post_cuid])
}

model PostComment {
  cuid       String   @id @default(cuid())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  content    String

  src_user      User   @relation(fields: [src_user_cuid], references: [cuid])
  src_user_cuid String

  dst_post      Post   @relation(fields: [dst_post_cuid], references: [cuid])
  dst_post_cuid String
}
